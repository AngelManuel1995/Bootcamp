<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Name - Tower - Floor</h1><hr>
    <%= form_for [@tower,@apartment] do |t| %>
    <div class="form-group">
      <%= t.label :name, "Apartmen name"%>
      <%= t.text_field :name, placeholder: "Apartmen name",class:"form-control" %>
    </div>
    <div class="form-group">
      <%= t.label :floor, "Apartmen floor"%>
      <%= t.text_field :floor, placeholder: "Apartmen floor", class:"form-control"%>
    </div>
    <div>
      <%= t.submit class: "btn btn-primary btn-block"%>
    </div>
    <%end%>
  </div>
</div>
